def print_poem(p):
    header = f"{p['title']} — Θέμα: {p['theme']}"
    line = "—" * max(10, len(header)//2)
    print(header)
    print(line)
    print("ΑΡΧΑΙΑ ΕΛΛΗΝΙΚΑ:")
    for v in p["grc"]:
        print("  " + v)
    print("\nΜΕΤΑΦΡΑΣΗ (ΝΕΑ ΕΛΛΗΝΙΚΑ):")
    for v in p["el"]:
        print("  " + v)
    print("\n")

if __name__ == "__main__":
    for i, p in enumerate(poems, 1):
        print(f"ΠΟΙΗΜΑ {i:02d}")
        print_poem(p)
